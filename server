
#!/bin/bash

case "$1" in
  "install")
    docker compose build
    sudo chmod -R 777 *
    docker compose up -d
    ;;
  "start")
    sudo chmod -R 777 www
    docker compose start
    ;;
  "stop")
    now=$(date +"%m_%d_%Y_%S")
    docker compose stop
    ;;
  "remove")
    docker compose down
    ;;
  *)
    echo "Opción no válida"
    ;;
esac
